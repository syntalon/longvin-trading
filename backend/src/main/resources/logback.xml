<?xml version="1.0" encoding="UTF-8"?>
<configuration scanPeriod="60 seconds" debug="false">
    <!-- Enable status listener to capture logback internal errors -->
    <!-- This will output logback errors to console when file logging fails -->
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>
    
    <!-- Define LOG_DIR property from environment variable or system property -->
    <!-- Logback can access both env vars and system properties -->
    <property name="LOG_DIR" value="${LOG_DIR:-logs}"/>
    
    <!-- Log logback configuration status (helps debug issues) -->
    <property name="LOG_DIR_RESOLVED" value="${LOG_DIR}"/>

    <!-- Console appender for all environments -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, America/New_York} [%thread] %-5level %logger{36}:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender with error handling -->
    <appender name="logFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Use LOG_DIR property defined above -->
        <!-- For Azure VM, set LOG_DIR=/var/log/longvin-trading or similar absolute path -->
        <file>${LOG_DIR}/longvinTrading.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/longvinTrading-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS, America/New_York} [%thread] %-5level %logger{36}:%L - %msg%n</pattern>
        </encoder>
        <prudent>false</prudent>
        <!-- Stop application if file appender fails to start (fail fast) -->
        <stopOnError>false</stopOnError>
    </appender>

    <!-- Hibernate SQL loggers - set to WARN to suppress SQL statements -->
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN"/>

    <logger name="quickfix.mina.message.FIXMessageDecoder" level="OFF" additivity="false">
    </logger>
    <logger name="com.longvin.trading" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="logFile"/>
    </logger>

    <root level="ERROR">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="logFile"/>
    </root>
</configuration>